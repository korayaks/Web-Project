@page
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model LoginModel

@{
    ViewData["Title"] = localizer["PageTitle"];
}

<link rel="stylesheet" href="~/css/RegisterLogin/RegisterLogin.css" asp-append-version="true" />

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-4 text-center">
            <section>
                <form id="account" method="post">
                    <h4>@localizer["Title"]</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="font-weight-bold">@localizer["Email"]</label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold">@localizer["Password"]</label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe"/> @localizer["RememberMe"]
                                @*@Html.DisplayNameFor(m => m.Input.RememberMe)*@
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">@localizer["LoginButton"]</button>
                    <hr />
                    <div>
                        <a class="small" asp-area="Identity" asp-page="/Account/Register">@localizer["Register"]</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

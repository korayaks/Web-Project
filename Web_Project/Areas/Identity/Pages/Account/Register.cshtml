@page
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model RegisterModel
@{
    ViewData["Title"] = localizer["PageTitle"];
}
<link rel="stylesheet" href="~/css/RegisterLogin/RegisterLogin.css" asp-append-version="true" />

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-4 text-center ">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>@localizer["Title"]</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="font-weight-bold">@localizer["Name"]</label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">@localizer["Email"]</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">@localizer["Password"]</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label class="font-weight-bold">@localizer["ConfirmPassword"]</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block">@localizer["RegisterButton"]</button>
                <hr />
                <div>
                    <a class="small" hasp-area="Identity" asp-page="/Account/Login">@localizer["Login"]</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model Category

@{
    ViewData["Title"] = localizer["PageTitle"];
}

<link rel="stylesheet" href="~/css/Project/CreateUpdate.css" asp-append-version="true" />


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@localizer["CardButtonTitle"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                @localizer["CardButtonContent"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">@localizer["CardButtonBack"]</button>
                <a class="btn btn-close" asp-controller="Admin" asp-action="Category">@localizer["CardButtonExit"]</a>
            </div>
        </div>
    </div>
</div>

<div id="wrapper">
    <partial name="Sidebar" />

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-9 col-lg-6 mx-auto">
                <div class="card o-hidden border-0 shadow-lg card-margin">
                    <ul class="ul-card">
                        <li class="li-card">@localizer["CardTitle"]<span class="close" data-toggle="modal" data-target="#exampleModal">&times;</span></li>
                    </ul>
                    <div class="card-body ml-4 mr-4">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="text-center">
                                    <h1 class="h4 mb-3 title-card">@localizer["CategoryAddTitle"]</h1>
                                </div>
                                <form class="user" method="post" asp-action="AddCategory">
                                    <input type="hidden" asp-for="Id" />
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-user" id="InputTitle" asp-for="Name">
                                        <span asp-validation-for="Name" class="text-danger small"></span>
                                    </div>
                                    <hr />
                                    <input type="submit" value="@localizer["CategoryAddButton"]" class="btn btn-primary btn-block mt-4" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = @localizer["PageTitle"];
}

<link rel="stylesheet" href="~/css/Index/Index.css" />



<header class="masthead text-white text-center masthead-color">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-8 mx-auto">
                <h1 class="mb-4 masthead-header">@localizer["MastheadTitle"]</h1>
                <h4 class="mb-4">@localizer["MastheadContent"]</h4>
            </div>
            <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                <form method="get" asp-controller="Project" asp-action="List">
                    <div class="input-group">
                        <input placeholder="@localizer["ProjectSearchDefault"]" class="form-control" type="text" name="keyword" value="@ViewBag.keyword">
                        <div class="input-group-append">
                            <button class="btn btn-secondary"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <section class="mt-5 wow fadeIn">
        <div class="row">
            <div class="col-md-6 mb-4">
                <img src="https://mdbootstrap.com/img/Marketing/mdb-press-pack/mdb-main.jpg" class="img-fluid z-depth-1-half" alt="">
            </div>
            <div class="col-md-6 mb-4">
                <h3 class="h3 mb-2 sub-header">@localizer["Title1"]</h3>
                <p>@localizer["Content1"]</p>
                <hr>
                <h3 class="h3 mb-2 sub-header">@localizer["Title2"]</h3>
                <p>@localizer["Content2"]</p>
            </div>
        </div>
    </section>
    <hr class="my-5">
    <section>
        <h2 class="h2 text-center mb-5 sub-header">@localizer["Title3"]</h2>
        <div class="row wow fadeIn">
            <div class="col-lg-6 col-md-12 px-4">
                <div class="row">
                    <div class="col-10">
                        <h5 class="feature-title sub-header">@localizer["Title4"]</h5>
                        <p class="grey-text">@localizer["Content4"]</p>
                    </div>
                </div>
                <div style="height:15px"></div>
                <div class="row">
                    <div class="col-10">
                        <h5 class="feature-title sub-header">@localizer["Title5"]</h5>
                        <p class="grey-text">
                            @localizer["Content5"]
                        </p>
                    </div>
                </div>
                <div style="height:15px"></div>
                <div class="row">
                    <div class="col-10">
                        <h5 class="feature-title sub-header">@localizer["Title6"]</h5>
                        <p class="grey-text">
                            @localizer["Content6"]
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/cXTThxoywNQ" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </section>
    <hr class="my-5">
    <section>
        <h2 class="h2 text-center mb-4 sub-header">@localizer["AboutTitle"]</h2>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="card user-card">
                        <div class="card-block">
                            <div class="user-image">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" class="img-radius" alt="User-Profile-Image">
                            </div>
                            <h6 class="f-w-600 m-t-25 m-b-10">@localizer["Person1Name"]</h6>
                            <p>@localizer["Person1City"] | @localizer["Person1BirthdayDate"]</p>
                            <hr>

                            <p class="m-t-15">@localizer["Person1About"]</p>
                            <hr>
                            <div class="row justify-content-center user-social-link">
                                <div class="col-auto"><a href="@localizer["Person1Linkedin"]"><i class="fab fa-linkedin text-linkedin"></i></a></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card user-card">
                        <div class="card-block">
                            <div class="user-image">
                                <img src="https://bootdey.com/img/Content/avatar/avatar6.png" class="img-radius" alt="User-Profile-Image">
                            </div>
                            <h6 class="f-w-600 m-t-25 m-b-10">@localizer["Person2Name"]</h6>
                            <p>@localizer["Person2City"] | @localizer["Person2BirthdayDate"]</p>
                            <hr>

                            <p class="m-t-15">@localizer["Person2About"]</p>
                            <hr>
                            <div class="row justify-content-center user-social-link">
                                <div class="col-auto"><a href="@localizer["Person2Linkedin"]"><i class="fab fa-linkedin text-linkedin"></i></a></div>
                                <div class="col-auto"><a href="@localizer["Person2Instagram"]"><i class="fab fa-instagram text-instagram"></i></a></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card user-card">
                        <div class="card-block">
                            <div class="user-image">
                                <img src="https://bootdey.com/img/Content/avatar/avatar1.png" class="img-radius" alt="User-Profile-Image">
                            </div>
                            <h6 class="f-w-600 m-t-25 m-b-10">@localizer["Person3Name"]</h6>
                            <p>@localizer["Person3City"] | @localizer["Person3BirthdayDate"]</p>
                            <hr>
                            <p class="m-t-15">@localizer["Person3About"]</p>
                            <hr>
                            <div class="row justify-content-center user-social-link">
                                @*<div class="col-auto"><a href="#!"><i class="fab fa-linkedin text-linkedin"></i></a></div>
                                <div class="col-auto"><a href="#!"><i class="fab fa-facebook text-facebook"></i></a></div>
                                <div class="col-auto"><a href="#!"><i class="fab fa-instagram text-instagram"></i></a></div>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>